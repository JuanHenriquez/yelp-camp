<% include ../partials/header %>

<div class="section grey darken-4">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<div class="section-title">
					<h3 class="white-text form-title">Create a new comment for <%= campground.name %></h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<div class="section-content">
					<form action="/campgrounds/<%= campground._id %>/comments" method="post" class="card card-form">
					    <div class="card-content">
					    	<div class="input-field col s12">
					    		<textarea name="comment[text]" id="desc" class="materialize-textarea"></textarea>
					    		<label for="desc">Description</label>
					    	</div>
					    	<button type="submit" class="btn waves-effect waves-dark cyan darken-3" id="btnSubmitForm">Send</button>
					    </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>
