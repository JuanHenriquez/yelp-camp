<% include partials/header %>

<div class="section grey darken-4">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<div class="section-title">
					<h3 class="white-text">Register now!</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<div class="section-content">
					<form action="/register" method="post" id="newCampgroundForm" class="card" enctype="multipart/form-data">
					    <div class="card-content">
							<div class="input-field col s12">
					    		<input type="text" name="name" id="name" />
					    		<label for="name">Name: </label>
					    	</div>
							<div class="input-field col s12">
					    		<input type="text" name="picture" id="picture" />
					    		<label for="picture">Picture: </label>
					    	</div>
					    	<div class="input-field col s12">
					    		<input type="text" name="username" id="username" />
					    		<label for="username">Username: </label>
					    	</div>
							<div class="input-field col s12">
					    		<input type="number" name="age" id="age" />
					    		<label for="age">Age: </label>
					    	</div>
							<div class="input-field col s12">
					    		<input type="email" name="email" id="email" />
					    		<label for="email">Email: </label>
					    	</div>
					    	<div class="input-field col s12">
					    		<input name="password" id="password" type="password"></textarea>
					    		<label for="password">Password:</label>
					    	</div>
					    	<button type="submit" class="btn waves-effect waves-dark teal darken-3" id="btnSubmitForm">Register</button>
					    </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include partials/footer %>
