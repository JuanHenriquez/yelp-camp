<% include partials/header %>

<div class="section grey darken-4">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<div class="section-title">
					<h3 class="white-text">Sign In</h3>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col s12">
				<div class="section-content">
					<form action="/login" method="post" id="newCampgroundForm" class="card">
					    <div class="card-content">
					    	<div class="input-field col s12">
					    		<input type="text" name="username" id="username" />
					    		<label for="username">Username: </label>
					    	</div>
					    	<div class="input-field col s12">
					    		<input name="password" id="password" type="password"></textarea>
					    		<label for="password">Password:</label>
					    	</div>
					    	<button type="submit" class="btn waves-effect waves-dark teal darken-3" id="btnSubmitForm">Sign In</button>
					    </div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

